<% vote_percentage = get_vote_percentage(option, poll).to_i.to_s + "%" %>
<div id="<%= dom_id option %>"
  class="option <%= option.user_vote_id ? "selected" : "" %> <%= option.vote_count > 0 ? "has-votes" : "" %>"
  style="background: linear-gradient(to right, var(--background-color), var(--background-color) <%= vote_percentage %>, transparent <%= vote_percentage %>);">
  <span class="content"><%= option.content %></span>

  <span class="vote-breakdown">
    <%= option.vote_count %> / <%= poll.vote_count %>
    (<%= vote_percentage %>)
  </span>

  <div class="actions">
    <% if option.user_vote_id %>
      <%= button_to option_vote_path(option.user_vote_id),
        method: :delete,
        params: { id: option.user_vote_id, option_id: option.id },
        title: "Remove Vote",
        class: "warn" do
      %>
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
          <path stroke-linecap="round" stroke-linejoin="round" d="M5 12h14" />
        </svg>
      <% end %>
    <% else %>
      <%= button_to option_votes_path,
        method: :post,
        params: { option_vote: { option_id: option.id, poll_id: option.poll_id }},
        title: "Vote" do
      %>
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
          <path stroke-linecap="round" stroke-linejoin="round" d="M12 4.5v15m7.5-7.5h-15" />
        </svg>
      <% end %>
    <% end %>
    <% if option.poll.user == Current.session.user %>
      <%= button_to option,
        method: :delete,
        data: { turbo_confirm: "Are you sure? This will delete the option and all votes on it." },
        title: "Delete Option",
        class: "warn" do
      %>
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
          <path stroke-linecap="round" stroke-linejoin="round" d="m14.74 9-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 0 1-2.244 2.077H8.084a2.25 2.25 0 0 1-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 0 0-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 0 1 3.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 0 0-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 0 0-7.5 0" />
        </svg>

      <% end %>
    <% end %>
  </div>
</div>
